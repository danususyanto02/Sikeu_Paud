<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#293462"
    android:orientation="vertical"
    tools:context=".DataActivity">

    <ImageView
        android:id="@+id/ava"
        android:src="@drawable/ava"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_profile">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_profile">

            <ImageView
                android:id="@+id/name_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_person_24"
                android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"
                />

            <TextView
                android:id="@+id/name_text"
                android:layout_marginTop="34dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="23dp"
                android:layout_marginEnd="40dp"
                android:layout_toRightOf="@+id/name_logo"
                android:text="Budi Budiman"
                android:textColor="#000000"
                android:textSize="28dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/nis_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_credit_card_24"
                android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"
                />

            <TextView
                android:id="@+id/nis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="40dp"
                android:layout_toRightOf="@+id/nis_logo"
                android:text="09031993"
                android:textColor="#000000"
                android:textSize="28dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/noHp_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_call_24"
                android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"
                />

            <TextView
                android:id="@+id/telp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="40dp"
                android:layout_toRightOf="@+id/noHp_logo"
                android:text="09031993"
                android:textColor="#000000"
                android:textSize="28dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/email_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_person_24"
                android:layout_marginTop="30dp"
                android:layout_marginStart="40dp"
                />

            <TextView
                android:id="@+id/email_u"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="40dp"
                android:layout_toRightOf="@+id/email_logo"
                android:text="09031993"
                android:textColor="#000000"
                android:textSize="28dp" />

        </RelativeLayout>

        <Button
            android:id="@+id/gantipoto"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Ganti Foto" />



    </LinearLayout>

</LinearLayout>